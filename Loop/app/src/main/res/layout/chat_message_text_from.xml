<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp">
    <TextView
        android:id="@+id/chat_message_text_from_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/chat_message_text_from_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:textSize="18dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/message_from_bg_text"/>
        <com.gongzetao.loop.view.CircleImageView
            android:id="@+id/chat_message_text_from_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/persion_default_photo"
            android:layout_marginLeft="5dp" />
    </RelativeLayout>

</LinearLayout>