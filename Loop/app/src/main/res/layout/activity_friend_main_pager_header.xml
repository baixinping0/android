<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/title_root"
        android:visibility="gone"
        android:background="@color/myBlueTop">
        <ImageView
            android:id="@+id/title_icon_last"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_last" />

        <TextView
            android:id="@+id/title_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:textSize="@dimen/textSize_title" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/friend_main_pager_header_iv_background"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/title_root"
        android:src="@drawable/persion_main_default_background" />
    <!-- com.gongzetao.loop.view.CircleImageView-->
    <LinearLayout
        android:id="@+id/friend_main_pager_header_photo_and_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.gongzetao.loop.view.CircleImageView
            android:id="@+id/friend_main_pager_header_iv_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/persion_default_photo" />

        <TextView
            android:id="@+id/friend_main_pager_header_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friend_main_pager_header_iv_photo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="dsaf"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/friend_main_pager_header_rl_attention"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="65dp"
        android:background="@color/main_pager_attention"
        android:gravity="center"
        android:padding="3dp">

        <TextView
            android:id="@+id/friend_main_pager_header_tv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="关注"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/friend_main_pager_header_ll_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_main_pager_header_iv_background"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/friend_main_pager_header_photo_and_name"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/friend_main_pager_header_ll_attention_she"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/friend_main_pager_header_tv_attention_she_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="关注他的" />
            </LinearLayout>
             <LinearLayout
                 android:id="@+id/friend_main_pager_header_ll_she_attention"
                 android:layout_width="0dp"
                android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:orientation="vertical">
                <TextView
                    android:id="@+id/friend_main_pager_header_tv_she_attention_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=""/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:drawablePadding="3dp"
                     android:gravity="center"
                     android:layout_marginTop="10dp"
                     android:text="他关注的" />
            </LinearLayout>

            <TextView
                android:id="@+id/friend_main_pager_header_tv_send_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/icon_message"
                android:gravity="center"
                android:text="发消息" />

            <TextView
                android:id="@+id/friend_main_pager_header_tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/icon_phone_main_pager"
                android:gravity="center"
                android:text="电话" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="#fbfcf9"
        android:layout_below="@+id/friend_main_pager_header_photo_and_name"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="标签:" />

            <TextView
                android:id="@+id/friend_main_pager_header_tv_lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="  " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="认证:" />

            <TextView
                android:id="@+id/friend_main_pager_header_tv_attestation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="  " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="性别:" />

            <TextView
                android:id="@+id/friend_main_pager_header_tv_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="  " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="生日:" />

            <TextView
                android:id="@+id/friend_main_pager_header_tv_born_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="  " />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>