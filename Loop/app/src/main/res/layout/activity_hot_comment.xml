<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myBlueTop">
        <ImageView
            android:id="@+id/hot_comment_iv_icon_last"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_last"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:id="@+id/hot_comment_tv_pager_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="热门评论"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textSize_title"/>
    </RelativeLayout>
    <com.gongzetao.loop.view.RefreshListView
        android:id="@+id/hot_comment_lv_comment"
        android:listSelector="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>