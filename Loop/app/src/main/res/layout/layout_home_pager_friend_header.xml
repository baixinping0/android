<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RadioGroup
        android:id="@+id/friend_pager_rg_botton_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myTop"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/friend_pager_rb_my_friend"
            style="@style/home_icon_bottom"
            android:checked="true"
            android:drawableTop="@drawable/my_friend_click"
            android:text="我的朋友" />

        <RadioButton
            android:id="@+id/friend_pager_rb_my_attention"
            style="@style/home_icon_bottom"
            android:drawableTop="@drawable/icon_attention_me"
            android:text="关注我的" />

        <RadioButton
            android:id="@+id/friend_pager_rb_attention_me"
            style="@style/home_icon_bottom"
            android:drawableTop="@drawable/icon_my_attention"
            android:text="我关注的" />

    </RadioGroup>
    <com.gongzetao.loop.view.sortlistview.ClearEditText
        android:id="@+id/layout_friend_pager_et_lookup_frame"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dip"
        android:background="@drawable/lookup_frame_background_friend"
        android:drawableLeft="@drawable/icon_lookup"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="搜索"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textSize="15.0dip" />
    <!--android:background="@drawable/lookup_frame_background_friend"-->
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ListView
        android:id="@+id/friend_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    </ListView>
    <TextView
        android:id="@+id/no_content_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  "
        android:textSize="12dp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="invisible"/>
</RelativeLayout>
</LinearLayout>