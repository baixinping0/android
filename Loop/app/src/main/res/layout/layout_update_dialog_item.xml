<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <ImageView
        android:id="@+id/update_dialog_item_bt_cancel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_dialog_last"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_chage_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="你可以把选择的标签在具体一下哦！\n别人将通过这个标签搜索到你！"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="修改内容"
            android:gravity="center"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/update_dialog_item_et_value"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:focusable="true"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:background="@drawable/lookup_frame_background_friend"
            android:maxLength="14"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/update_dialog_item_bt_ok"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:focusable="false"
                android:background="@drawable/dialog_ok_background"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:text="确定"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>