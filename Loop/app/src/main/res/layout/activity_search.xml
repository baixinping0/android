<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myBlueTop">

        <ImageView
            android:id="@+id/home_iv_icon_last"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_last" />

        <EditText
            android:id="@+id/search_et_lookup_frame"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/lookup_frame_background_main"
            android:drawableLeft="@drawable/icon_lookup"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/search_tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/search_tv_select_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4da885"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/search_tv_friend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/persion_click"
            android:text="朋友"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/search_tv_business"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/icon_search_business"
            android:layout_height="match_parent"
            android:text="商家"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/search_tv_official"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/icon_search_official"
            android:layout_height="match_parent"
            android:text="官方"
            android:textSize="13sp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/search_lv_search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <GridView
        android:id="@+id/recommend_label_gv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:horizontalSpacing="20dp"
        android:numColumns="2"
        android:scrollbars="none"
        android:verticalSpacing="20dp" />

</LinearLayout>