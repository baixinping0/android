<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical">

        <com.gongzetao.loop.view.CircleImageView
            android:id="@+id/activity_remind_item_iv_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/persion_default_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/activity_remind_item_iv_photo">

            <TextView
                android:id="@+id/activity_remind_item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:background="@drawable/sel_pressed_text_background"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_remind_item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-12 00:00:00"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/activity_remind_item_tv_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/activity_remind_item_tv_remind_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="谁赞了你"
        android:layout_marginLeft="5dp"/>
    <LinearLayout
        android:id="@+id/activity_remind_item_ll_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lineColor"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/activity_remind_item_iv_remind_publish_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/default_picture"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/activity_remind_item_tv_remind_publish_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>