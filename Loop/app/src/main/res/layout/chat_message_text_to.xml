<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    >
    <TextView
        android:id="@+id/chat_message_text_to_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/chat_message_text_to_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:background="@drawable/message_to_text"/>
        <com.gongzetao.loop.view.CircleImageView
            android:id="@+id/chat_message_text_to_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ad1"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>