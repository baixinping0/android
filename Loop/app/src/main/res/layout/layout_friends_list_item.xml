<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >
    <ImageView
        android:id="@+id/friends_item_iv_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ad1" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/friends_item_iv_photo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/friends_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/friends_item_tv_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签"
            android:layout_margin="2dp"
            android:drawableLeft="@drawable/icon_lable_small"
            android:drawablePadding="5dp"
            android:textSize="14sp" />
    </LinearLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/sel_icon_isattention"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"/>
</RelativeLayout>