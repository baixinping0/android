<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfbf9"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/persion_ll_persion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <!-- com.gongzetao.loop.view.CircleImageView-->
        <com.gongzetao.loop.view.CircleImageView
            android:id="@+id/main_iv_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/persion_default_photo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/main_iv_photo">

            <TextView
                android:id="@+id/main_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:background="@drawable/sel_pressed_text_background"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/main_iv_attestation"
                android:layout_toRightOf="@+id/main_tv_name"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_attestation_small"/>

            <TextView
                android:id="@+id/main_tv_time"
                android:layout_below="@+id/main_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-12 00:00:00"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/main_iv_delete"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_delete"
            android:visibility="invisible"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/main_tv_transmit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_16"/>
    <LinearLayout
        android:id="@+id/main_ll_transmit_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/main_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_16" />

        <com.gongzetao.loop.view.lGNineGrideView.LGNineGrideView
            android:id="@+id/main_gv_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:verticalSpacing="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/main_rl_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/main_iv_praise"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/sel_icon_trends_praise1" />

                <TextView
                    android:id="@+id/main_tv_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="   "
                    android:layout_toRightOf="@+id/main_iv_praise" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/main_rl_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/main_iv_comment"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/sel_icon_trends_comment1" />

                <TextView
                    android:id="@+id/main_tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="   "
                    android:layout_toRightOf="@+id/main_iv_comment" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/main_rl_transmit"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/main_iv_transmit"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="5dp"

                android:src="@drawable/sel_icon_trends_transmit1" />

            <TextView
                android:id="@+id/main_tv_transmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:text="   "
                android:layout_toRightOf="@+id/main_iv_transmit" />
        </RelativeLayout>
    </LinearLayout>
    <View style="@style/breakLine" />
    </LinearLayout>