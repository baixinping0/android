<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RadioGroup
            android:id="@+id/info_pager_rg_botton_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/myTop"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/pager_info_header_rb_reply"
                style="@style/home_icon_bottom"
                android:checked="true"
                android:drawableTop="@drawable/icon_reply"
                android:text="回复我的" />

            <RadioButton
                android:id="@+id/pager_info_header_rb_remind_me"
                style="@style/home_icon_bottom"
                android:drawableTop="@drawable/icon_remind_blue"
                android:text="\@我的" />

            <RadioButton
                android:id="@+id/pager_info_header_rb_praise"
                style="@style/home_icon_bottom"
                android:drawableTop="@drawable/icon_praise"
                android:text="赞" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/pager_info_header_tv_reply_remind_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:background="@drawable/shape_message_remind"
                    android:gravity="center"
                    android:layout_marginLeft="70dp"
                    android:textColor="#fff" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/pager_info_header_tv_remind_remind_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:background="@drawable/shape_message_remind"
                    android:gravity="center"
                    android:layout_marginLeft="70dp"
                    android:textColor="#fff" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/pager_info_header_tv_praise_remind_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:background="@drawable/shape_message_remind"
                    android:gravity="center"
                    android:layout_marginLeft="70dp"
                    android:textColor="#fff" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>