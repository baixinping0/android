<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/persion_ll_persion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <!--com.gongzetao.loop.view.CircleImageView-->

        <com.gongzetao.loop.view.CircleImageView
            android:id="@+id/persion_iv_persion_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/persion_default_photo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/content_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/persion_tv_persion_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="正在获取位置信息..."
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/content_background"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/persion_ll_persion_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#fff">

            <TextView
                style="@style/itemStyle"
                android:text="我的分享" />
        </LinearLayout>

        <View
            style="@style/breakLine"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <LinearLayout
            android:id="@+id/persion_ll_persion_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#fff">

            <TextView
                android:id="@+id/persion_tv_persion_lable"
                style="@style/itemStyle"
                android:text="篮球" />
        </LinearLayout>
        <View
            style="@style/breakLine"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
        <LinearLayout
            android:id="@+id/persion_ll_persion_attestation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#fff">

            <TextView
                android:id="@+id/persion_tv_persion_attestation"
                style="@style/itemStyle"
                android:text="申请认证" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/content_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/persion_ll_setting"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/itemStyle"
                android:text="设置" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>